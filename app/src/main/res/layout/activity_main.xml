<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A1E">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingHorizontal="24dp"
        android:paddingVertical="24dp">

        <LinearLayout
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home_content_inner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="0dp">

                <TextView
                    android:id="@+id/homeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="12dp"
                    android:text="@string/home_section_title"
                    android:textColor="#FFFFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="@string/status_default"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#FF2D3035"
                    android:text="@string/connect_button"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/btnConfigUpload"
                    android:layout_width="399dp"
                    android:layout_height="162dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/config_uplo"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="24dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="24dp">

                        <ImageView
                            android:id="@+id/imageConfigIcon"
                            android:layout_width="41dp"
                            android:layout_height="37dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_config_icon"
                            android:padding="4dp"
                            android:contentDescription="@string/config_upload_icon_content_desc"
                            android:scaleType="centerInside"
                            android:src="@drawable/config"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/configUploadTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/garet"
                            android:textFontWeight="300"
                            android:text="@string/config_upload_title"
                            android:textColor="#FFFFFFFF"
                            android:textSize="32sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imageConfigIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/configUploadDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/garet"
                            android:textFontWeight="300"
                            android:text="@string/config_upload_description"
                            android:textColor="#FFFFFFFF"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="@id/configUploadTitle"
                            app:layout_constraintStart_toStartOf="@id/configUploadTitle"
                            app:layout_constraintTop_toBottomOf="@id/configUploadTitle"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
